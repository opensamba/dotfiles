vbell on
vbell_msg "beep"
autodetach on
startup_message off
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."
defscrollback 1000000
termcapinfo xterm ti@:te@
term xterm-256color
ignorecase
# keybindings
bind k
bind ^k
bind .
bind ^\
bind \\
bind ^h
bind h
bind 'K' kill
bind 'I' login on
bind 'O' login off
bind '}' history

shell zsh
nonblock on

logfile /home/rpreziusi/.screenlog/screenlog%n_%Y-%m-%d.log
#deflog on  # only if you want to log every screen windows in a logfile

# here comes the pain
#caption string "%?%F%{= Bk}%? %C%A %D %d-%m-%Y %{= kB} %t%= %?%F%{= Bk}%:%{= wk}%? %n "
hardstatus alwayslastline
hardstatus string '%{= g}[%{= y}%H%{g}]%{= kw}%?   %-Lw%?%{r}(%{g}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%=%{g}[%{B}%Y-%m-%d %c]'
