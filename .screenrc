vbell on
autodetach on
startup_message off
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."
defscrollback 1000000
term xterm-256color
ignorecase
# keybindings
bind k
bind ^k
bind .
bind ^\
bind \\
bind ^h
bind h
bind 'K' kill
bind 'I' login on
bind 'O' login off
bind '}' history

#hardstatus alwayslastline "%Lw %3n %t%? @%u%?%? [%h]%?%=%c"
hardstatus alwayslastline "%Lw "
# pgup pgdown scrolling
termcapinfo xterm* ti@:te@

